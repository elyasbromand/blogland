<%- include('./partials/header.ejs') %>

<!-- Main Blog Section -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Blog Post Title and Author -->
            <div class="text-center mb-4">
                <h1 class="display-4 "><%= blogs.title %></h1>
                <p class="text-muted">By <strong><%= blogs.author %></strong></p>
            </div>

            <!-- Blog Post Content -->
            <div class="mb-5">
                <p class="lead ">
                    <%= blogs.blog %>
                </p>
            </div>

            
            <div class="text-muted">
                    <small>Published on: <%= new Date().toLocaleDateString() %></small>
            </div>
            

            <!-- Back to Blog List Button -->
            <div class="text-center mt-4">
                <a href="/" class="btn btn-primary btn-lg">Back to Blog List</a>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
